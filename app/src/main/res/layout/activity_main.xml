<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_to_guess_what_is_the_secret_number_tthe_range_is_from_0_to_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textAlignment="center"
        android:id="@+id/txtInstruction"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/txtInstruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textAlignment="center"
        android:id="@+id/txtGuess"
        android:gravity="center_horizontal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/your_guess_is"
        android:layout_below="@+id/txtGuess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/userInput"
        android:inputType="number"
        android:importantForAutofill="no" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/Guess"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:onClick="onSubmittedClicked"
        android:id="@+id/subButton"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/Reset"
        android:background="@color/cardview_shadow_start_color"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:onClick="onSubmittedClicked"
        android:id="@+id/resetButton"
        />


</RelativeLayout>